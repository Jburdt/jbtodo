<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>


  <div id="search" class="flex justify-end items-center" >
    <%= form_with url: "/todos", data: { turbo_frame: "todos", turbo_action: "advance"}, method: :get do |form| %>
      <%= form.label :query, "Search for:" %>
      <%= form.text_field :query, data: {action:"keyup->search#doSearch"} %>
      <%= form.submit "Search" %>
    <% end %>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Todos</h1>
    <%= link_to 'New todo', new_todo_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= link_to "completed", completed_path, class: "rounded-lg py-3 px-5 bg-gray-600 text-white block font-medium" %> 

  <%= render partial: "todos" %>
</div>


